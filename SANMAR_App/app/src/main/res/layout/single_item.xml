<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:weightSum="5"
    android:elevation="10dp"
    android:background="@drawable/item_background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4.5">

        <ImageView
            android:id="@+id/project_imageID"
            android:layout_width="85dp"
            android:layout_height="75dp"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:background="@drawable/single_item_image"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/project_nameID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project Name"
                android:textSize="20dp"
                android:textColor="#5C3803"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/project_addressID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project Address"
                android:textSize="12dp"
                android:textStyle="italic"
                android:textColor="#000000"
                />

            <TextView
                android:id="@+id/project_catID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project Category"
                android:textSize="14dp"
                android:textColor="#6C4409"/>


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="8dp"
        android:gravity="center">

        <Button
            android:id="@+id/item_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/single_item_button"
            android:gravity="center"
            android:text="Details"
            android:textColor="#5C3803" />
    </LinearLayout>

        

</LinearLayout>